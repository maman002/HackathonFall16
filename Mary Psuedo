boolean accepted;

//location icon clicked
Event event = new Event();

event.eventOccasion = //input from dropdown
event.eventName = //input from additional info text box
event.eventUserNames = //input from user name text box, new line used to indicate diff users;

//if accept button pressed
event.accepted = true;

}
}

